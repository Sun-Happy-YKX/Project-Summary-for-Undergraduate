.bodyContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shareInfoView{
  width: 640rpx;
  border-radius: 5px;
  background-color: #99CCFF;
  margin-top: 30rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.shareInfoTapableView{
  display: flex;
  align-items: center;
  padding:20rpx 15rpx 20rpx 15rpx
}

.shareTextInfoView{
  margin-left: 30rpx;
}

.shareNameText{
  font-size: 50rpx;
  font-weight: 450;
}

.fileSizeText{
  font-size: 25rpx;
  color:#646464;
}

.uploadDateText{
  font-size:25rpx;
  color: #646464;
}