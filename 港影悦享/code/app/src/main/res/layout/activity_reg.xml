<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/common_topbar"/>

    <ImageView android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/mIvLogo"
        android:background="@mipmap/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mName"
        android:text="公司名称"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mIvLogo"
        android:layout_marginTop="18dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mSlogan"
        android:text="公司宣传语slogan"
        android:textColor="#B0B3BE"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mName"
        android:layout_marginTop="5dp"/>

    <EditText style="@style/mw_Style"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:id="@+id/mEtPhone"
        android:maxLength="11"
        android:lines="1"
        android:inputType="text"
        android:textSize="16sp"
        android:hint="请输入帐号"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mSlogan"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDE"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mEtPhone"/>

    <EditText style="@style/mw_Style"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="34dp"
        android:inputType="textPassword"
        android:id="@+id/mEtPw"
        android:maxLength="11"
        android:lines="1"
        android:textSize="16sp"
        android:hint="请输入密码"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mEtPhone"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDE"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mEtPw"/>

    <EditText style="@style/mw_Style"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="34dp"
        android:id="@+id/mEtName"
        android:maxLength="11"
        android:lines="1"
        android:textSize="16sp"
        android:hint="请输入姓名"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mEtPw"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDE"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mEtName"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/mBtnReg"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/login_btn_bg"
        android:layout_margin="34dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mEtName"/>




</androidx.constraintlayout.widget.ConstraintLayout>