<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <ImageView android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/mIvHead"
        android:background="@mipmap/default_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView style="@style/ww_Style"
        android:id="@+id/mTvName"
        app:layout_constraintTop_toTopOf="@+id/mIvHead"
        app:layout_constraintLeft_toRightOf="@id/mIvHead"
        android:text="姓名"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView style="@style/ww_Style"
        android:id="@+id/mTvContent"
        android:text="评论"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/mIvHead"
        app:layout_constraintBottom_toBottomOf="@+id/mIvHead"
        android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>